<Window x:Class="ATM_System.Pages.SuccessfullSignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM_System.Pages"
        mc:Ignorable="d"
        Title="SuccessfullSignUp" Height="590" Width="400" Background="FloralWhite" WindowStyle="None" 
        Mouse.MouseDown="MouseLeftClick" ResizeMode="NoResize">
    <Grid>
        <MediaElement LoadedBehavior="Play" Source="C:\Users\Spec\source\Projects\ATM System Project\ATM System\Images\SignedUp.gif" 
                      Width="400" Margin="0, -295, 0, 0"/>
        <Label Content="Congratulations!" FontSize="20" FontWeight="Bold" Margin="120, 330, 0, 0"/>
        <TextBlock Text="You have successfully signed up!" 
                   FontSize="16" Margin="90, 385, 40, 0" FontWeight="SemiBold" TextWrapping="Wrap"/>
        <Button Content="Continue" Width="100" Height="40" Background="GhostWhite" Foreground="MediumPurple" FontWeight="SemiBold" 
                FontSize="15" Margin="0, 360, 0, 0" Click="ExitCurrentPage">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
